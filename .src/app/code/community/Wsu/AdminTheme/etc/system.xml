<?xml version="1.0"?>
<config>
  <sections>
    <wsu_admintheme translate="label" module="wsu_admintheme">
      <label>Wsu AdminTheme</label>
      <tab>utilitiestab</tab>
      <sort_order>1000</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <hint>
          <frontend_model>wsu_admintheme/adminhtml_system_config_fieldset_hint</frontend_model>
          <sort_order>0</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
        </hint>
        <config translate="label">
          <label>Admin Theme Settings</label>
          <sort_order>10</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>0</show_in_website>
          <show_in_store>0</show_in_store>
          <fields>
            <theme translate="label">
              <label>Current Admin Theme</label>
              <frontend_type>select</frontend_type>
              <source_model>wsu_admintheme/adminhtml_system_config_source_themes</source_model>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </theme>
            <extendmenu translate="label">
				<label>Use Extended Menus</label>
				<frontend_type>select</frontend_type>
				<source_model>adminhtml/system_config_source_yesno</source_model>
				<sort_order>30</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
            </extendmenu>
			<logo translate="label comment">
				<label>Logo</label>
				<comment>Allowed file types: jpeg, gif, png.</comment>
				<frontend_type>image</frontend_type>
				<backend_model>adminhtml/system_config_backend_image</backend_model>
				<upload_dir config="system/filesystem/media" scope_info="1">theme</upload_dir>
				<base_url type="media" scope_info="1">theme</base_url>
				<sort_order>1</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
			</logo>
			<login_bk translate="label comment">
				<label>Login Backgroud</label>
				<comment>Allowed file types: jpeg, gif, png.</comment>
				<frontend_type>image</frontend_type>
				<backend_model>adminhtml/system_config_backend_image</backend_model>
				<upload_dir config="system/filesystem/media" scope_info="1">theme/admin</upload_dir>
				<base_url type="media" scope_info="1">theme/admin</base_url>
				<sort_order>1</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
			</login_bk>
			<showmageads translate="label comment">
				<label>Show Magento ads</label>
				<comment>This will hide the Magento Ads to advoid miss clicks by users.</comment>
				<frontend_type>select</frontend_type>
				<source_model>adminhtml/system_config_source_yesno</source_model>
				<sort_order>20</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
			</showmageads>
			<shownotifications translate="label comment">
				<label>Show notifications</label>
				<comment>This will hide show notifications that may not be needed to be seen by users.</comment>
				<frontend_type>select</frontend_type>
				<source_model>adminhtml/system_config_source_yesno</source_model>
				<sort_order>30</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
			</shownotifications>
          </fields>
        </config>
      </groups>
    </wsu_admintheme>
  </sections>
</config>
